<fable>
    <page background="bg.png">
        <agent text="O cavaleiro está congelado, arraste e solte o cogumelo do sol para salvar ele" x="20" y="400" font-size="18" width="250"/>
        <agent text="Não esqueça de travar o preview para arrastar elementos em tela" x="20" y="350" color="darkred" width="250"/>
        <agent img="block.png" x="0" y="0" width="100" height="100"/>
        <agent img="block.png" x="100" y="0" width="100" height="100"/>
        <agent img="block.png" x="200" y="0" width="100" height="100"/>
        <agent img="block.png" x="300" y="0" width="100" height="100"/>
        <agent img="block.png" x="400" y="0" width="100" height="100"/>
        <agent img="IceBox.png" x="100" y="90" width="80" height="80" drop-zone="descongelado">
            <descongelado img="Idle (1).png" width="80" height="100"/>
        </agent>
        <agent img="Mushroom_2.png" x="450" y="450" width="38" height="38" draggable="true" on-drop="descongelado" on-zone="removido" on-trigger="removido">
            <removido x="-50"/>
        </agent>
    </page>
</fable>